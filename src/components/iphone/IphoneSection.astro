---
import FaSignal from "../../assets/icons/font-awesome-solid/FaSignal.astro";
import FaWifi from "../../assets/icons/font-awesome-solid/FaWifi.astro";
import FaBatteryFull from "../../assets/icons/font-awesome-solid/FaBatteryFull.astro";
import animations from "../../styles/fadeAnimations.module.css";
---

<div
  class="flex items-center justify-center flex-col min-h-screen bg-white gap-10 p-8"
>
  <div class={`${animations.fadeInUp}`}>
    <h2 class="text-3xl text-center md:text-4xl font-bold mb-4 text-black">
      Mikhuy App
    </h2>
    <p class="text-lg text-gray-600 max-w-3xl mx-auto text-center">
      Los usuarios conectarán con tus servicios por medio de nuestra app
    </p>
  </div>
  {/* iPhone Container */}
  <div
    class={`relative w-80 h-[640px] bg-black rounded-[3rem] p-2 shadow-2xl ${animations.fadeInUp}`}
  >
    {/* iPhone Screen */}
    <div
      class="w-full h-full bg-white rounded-[2.5rem] overflow-hidden relative"
    >
      {/* Status Bar */}
      <div class="flex justify-between items-center px-6 pt-4 pb-2">
        <div class="text-sm font-semibold text-black">9:41</div>
        <div class="flex items-center space-x-1">
          <FaSignal class="w-4 h-4 text-black" />
          <FaWifi class="w-4 h-4 text-black" />
          <FaBatteryFull class="w-4 h-4 text-black" />
        </div>
      </div>

      {/* Dynamic Island */}
      <div
        class="absolute top-2 left-1/2 transform -translate-x-1/2 w-32 h-6 bg-black rounded-full"
      >
      </div>

      {/* Notification */}
      <div class="mx-4 mt-4 mb-6">
        <div
          class="bg-white border border-gray-200 rounded-2xl shadow-lg p-4 animate-pulse"
        >
          <div class="flex items-start space-x-3">
            {/* App Icon */}
            <div
              class="w-10 h-10 bg-orange-500 rounded-lg flex items-center justify-center flex-shrink-0"
            >
              <span class="text-white font-bold text-lg">M</span>
            </div>

            {/* Notification Content */}
            <div class="flex-1 min-w-0">
              <div class="flex items-center justify-between">
                <p class="text-sm font-bold text-black">Mikhuy</p>
                <span class="text-xs text-gray-500">ahora</span>
              </div>
              <p class="text-sm text-gray-700 mt-1">Tu pedido está listo</p>
            </div>
          </div>
        </div>
      </div>

      {/* Home Screen Background */}
      <div class="px-6 pt-4">
        {/* App Grid */}
        <div class="grid grid-cols-4 gap-4 mb-6">
          {
            Array.from({ length: 16 }).map((_) => (
              <div class="w-14 h-14 bg-gray-300 rounded-xl" />
            ))
          }
        </div>

        {/* Dock */}
        <div class="absolute bottom-8 left-6 right-6">
          <div class="bg-white/80 backdrop-blur-md rounded-2xl p-3">
            <div class="flex justify-center space-x-4">
              {
                Array.from({ length: 4 }).map((_) => (
                  <div class="w-14 h-14 bg-gray-400 rounded-xl" />
                ))
              }
            </div>
          </div>
        </div>
      </div>

      {/* Home Indicator */}
      <div
        class="absolute bottom-2 left-1/2 transform -translate-x-1/2 w-32 h-1 bg-black rounded-full"
      >
      </div>
    </div>
  </div>
</div>
