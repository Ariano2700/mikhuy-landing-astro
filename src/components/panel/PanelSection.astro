---
import style from "../../styles/panel.module.css";
import animations from "../../styles/fadeAnimations.module.css";
import { products } from "../../const/panel";
import FaHome from "../../assets/icons/font-awesome-solid/FaHome.astro";
import FaBoxOpen from "../../assets/icons/font-awesome-solid/FaBoxOpen.astro";
import FaShoppingCart from "../../assets/icons/font-awesome-solid/FaShoppingCart.astro";
import IoGrid from "../../assets/icons/ion-icons/IoGrid.astro";
import FaList from "../../assets/icons/font-awesome-solid/FaList.astro";
import BsThreeDotsVertical from "../../assets/icons/bootstrap-icons/BsThreeDotsVertical.astro";
import Image from "astro/components/Image.astro";
---

<section
  id="panel"
  class={`py-16 md:py-24 bg-gray-100 ${style.wrapperMask} overflow-hidden`}
>
  <div class="container mx-auto px-4">
    <div class={`text-center mb-16 ${animations.fadeInUp}`}>
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-black">
        Interfaz Intuitiva
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        Gestiona tu inventario y productos con nuestra interfaz fácil de usar.
      </p>
    </div>

    <div class={`${animations.fadeInUp}`}>
      <div class="flex border border-slate-300 rounded-sm">
        <!-- Sidebar -->
        <div
          class="w-[250px] h-screen bg-white border-r border-gray-200 flex flex-col text-gray-800"
        >
          <div class="flex flex-col items-center justify-center p-4 gap-1">
            <div class="flex flex-col items-center justify-center">
              <Image
                src="/mikhuy_icon.webp"
                width="40"
                height="40"
                alt="mikhuy icon"
              />
              <h2 class="text-mikhuy text-3xl exo2-italic italic font-bold">
                MIKHUY
              </h2>
            </div>
            <h3 class="text-gray-400 text-sm">Sistema de gestión</h3>
          </div>

          <div class="w-full h-[1.5px] bg-gray-200 mb-3"></div>

          <nav class="flex-1">
            <ul class="space-y-4 px-2">
              <li>
                <a
                  href="#"
                  class="flex items-center px-4 py-2 rounded text-black hover:bg-black hover:text-white transition-all duration-200"
                >
                  <FaHome class="mr-2" />
                  <span>Dashboard</span>
                </a>
              </li>
              <li>
                <a
                  href="#"
                  class="flex items-center px-4 py-2 rounded bg-black text-white hover:bg-black hover:text-white transition-all duration-200"
                >
                  <FaBoxOpen class="mr-2" />
                  <span>Almacén</span>
                </a>
              </li>
              <li>
                <a
                  href="#"
                  class="flex items-center px-4 py-2 rounded text-black hover:bg-black hover:text-white transition-all duration-200"
                >
                  <FaShoppingCart class="mr-2" />
                  <span>Pedidos</span>
                </a>
              </li>
              <li>
                <a
                  href="#"
                  class="flex items-center px-4 py-2 rounded text-black hover:bg-black hover:text-white transition-all duration-200"
                >
                  <IoGrid class="mr-2" />
                  <span>Productos</span>
                </a>
              </li>
              <li>
                <a
                  href="#"
                  class="flex items-center px-4 py-2 rounded text-black hover:bg-black hover:text-white transition-all duration-200"
                >
                  <FaList class="mr-2" />
                  <span>Categorias</span>
                </a>
              </li>
            </ul>
          </nav>

          <div class="w-full h-[1.5px] bg-gray-200"></div>

          <div class="mb-2 mt-2 flex items-center justify-center">
            <button
              class="text-black rounded-3xl flex items-center gap-3 outline-none px-3 py-2 hover:bg-gray-50 transition-all duration-200 cursor-pointer"
            >
              <Image
                src="/mikhuy_icon.webp"
                alt="Mikhuy profile"
                width="56"
                height="56"
                loading="lazy"
              />
              <div class="flex flex-col items-start">
                <p class="font-semibold text-black/80 text-xs md:text-md">
                  Mikhuy shop
                </p>
                <p class="text-gray-400 text-xs md:text-sm">mikhuy@gmail.com</p>
              </div>
            </button>
          </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1 bg-[#f5f5f5]">
          <div class="bg-white px-4 py-5">
            <h2 class="text-xl font-bold">Almacén</h2>
          </div>

          <div class="flex flex-col p-4 sm:p-6 gap-4">
            <div
              class="flex flex-col sm:flex-row justify-between items-stretch sm:items-center gap-4"
            >
              <div class="relative w-full">
                <span
                  class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path
                      d="M10 18a7.952 7.952 0 0 0 4.897-1.688l4.396 4.396 1.414-1.414-4.396-4.396A7.952 7.952 0 0 0 18 10c0-4.411-3.589-8-8-8s-8 3.589-8 8 3.589 8 8 8zm0-14c3.309 0 6 2.691 6 6s-2.691 6-6 6-6-2.691-6-6 2.691-6 6-6z"
                    ></path>
                  </svg>
                </span>
                <input
                  type="text"
                  placeholder="Buscar productos..."
                  class="w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md outline-none bg-white"
                />
              </div>
              <button
                class="flex items-center gap-2 px-4 py-2 bg-black text-white rounded hover:bg-black/80 transition-all duration-200"
              >
                <svg viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
                  <path
                    d="M21 4V6H20L15 13.5V22H9V13.5L4 6H3V4H21ZM6.4037 6L11 12.8944V20H13V12.8944L17.5963 6H6.4037Z"
                  ></path>
                </svg>
                <span>Filtro</span>
              </button>
            </div>

            <div
              class="overflow-hidden rounded-lg shadow max-h-[calc(100vh-250px)]"
            >
              <table
                class="min-w-full divide-y divide-gray-200 border border-gray-300 text-sm"
              >
                <thead class="bg-white sticky top-0 shadow-sm z-10">
                  <tr>
                    <th
                      class="px-4 py-3 text-left text-gray-500 uppercase tracking-wide"
                      >Imagen</th
                    >
                    <th
                      class="px-4 py-3 text-left text-gray-500 uppercase tracking-wide"
                      >Producto</th
                    >
                    <th
                      class="px-4 py-3 text-left text-gray-500 uppercase tracking-wide"
                      >Stock</th
                    >
                    <th
                      class="px-4 py-3 text-left text-gray-500 uppercase tracking-wide"
                      >Estado</th
                    >
                    <th
                      class="px-4 py-3 text-left text-gray-500 uppercase tracking-wide"
                      >Caducidad</th
                    >
                    <th
                      class="px-4 py-3 text-center text-gray-500 uppercase tracking-wide"
                      >Acciones</th
                    >
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 bg-white">
                  {
                    products.map((p) => (
                      <tr>
                        <td class="h-[54px] px-4 py-3 whitespace-nowrap">
                          <Image
                            src={p.image}
                            alt={p.name}
                            width="50"
                            height="50"
                            class="rounded-md"
                            loading="lazy"
                          />
                        </td>
                        <td class="px-4 py-3 whitespace-nowrap">{p.name}</td>
                        <td class="px-4 py-3 whitespace-nowrap">{p.stock}</td>
                        <td class="px-4 py-3 whitespace-nowrap">
                          <span class="text-emerald-700 bg-emerald-200 px-3 py-1 rounded-full font-semibold text-xs">
                            {p.status}
                          </span>
                        </td>
                        <td class="px-4 py-3 whitespace-nowrap">{p.expiry}</td>
                        <td class="px-4 py-3 text-center whitespace-nowrap">
                          <button
                            aria-label={`Actions ${p.name}`}
                            class="text-xl hover:text-gray-600 transition"
                          >
                            <BsThreeDotsVertical />
                          </button>
                        </td>
                      </tr>
                    ))
                  }
                </tbody>
              </table>
            </div>

            <div
              class="flex flex-col sm:flex-row justify-between items-center px-4 py-3 text-gray-700 text-xs bg-white -mt-4 rounded-sm border-l border-r border-b border-slate-300"
            >
              <p>
                Mostrando <span class="font-medium">{products.length}</span> de <span
                  class="font-medium">{products.length}</span
                > productos
              </p>
              <div class="flex gap-2 items-center mt-2 sm:mt-0">
                <button aria-label="Disabled Button" disabled class="p-2 border rounded opacity-50">
                  <svg
                    fill="currentColor"
                    viewBox="0 0 512 512"
                    class="w-4 h-4"
                  >
                    <path
                      d="M217.9 256L345 129c9.4-9.4 9.4-24.6 0-33.9-9.4-9.4-24.6-9.3-34 0L167 239c-9.1 9.1-9.3 23.7-.7 33.1L310.9 417c4.7 4.7 10.9 7 17 7s12.3-2.3 17-7c9.4-9.4 9.4-24.6 0-33.9L217.9 256z"
                    ></path>
                  </svg>
                </button>
                <span>Página 1 de 1</span>
                <button aria-label="Disabled Button" disabled class="p-2 border rounded opacity-50">
                  <svg
                    fill="currentColor"
                    viewBox="0 0 512 512"
                    class="w-4 h-4 rotate-180"
                  >
                    <path
                      d="M217.9 256L345 129c9.4-9.4 9.4-24.6 0-33.9-9.4-9.4-24.6-9.3-34 0L167 239c-9.1 9.1-9.3 23.7-.7 33.1L310.9 417c4.7 4.7 10.9 7 17 7s12.3-2.3 17-7c9.4-9.4 9.4-24.6 0-33.9L217.9 256z"
                    ></path>
                  </svg>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
