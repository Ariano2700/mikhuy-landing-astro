---
import Image from "astro/components/Image.astro";
---

<section id="letters-scroll" class="letters-scroll text-7xl lg:text-8xl">
  <div class="panel" style="--bg: #fbcfe8">Mikhuy</div>
  <div class="panel" style="--bg: #ddd6fe">Siempre</div>
  <div class="panel" style="--bg: #bfdbfe">Será</div>
  <div class="panel" style="--bg: #bbf7d0">Tú</div>
  <div class="panel" style="--bg: #fef08a">Mejor</div>
  <div class="panel" style="--bg: #fecaca">Aliado</div>
  <div class="panel">
    <div class="absolute inset-0 pointer-events-none overflow-hidden z-0">
      {
        Array.from({ length: 20 }).map((_, i) => (
          <span
            class="floating-heart"
            style={{
              left: `${Math.random() * 100}%`,
              animationDelay: `${Math.random() * 10}s`,
              animationDuration: `${5 + Math.random() * 5}s`,
            }}
          >
            ❤️
          </span>
        ))
      }
    </div>
    <Image
      src="/mikhuy_eye.png"
      alt="Mikhuy guiñando"
      width="160"
      height="160"
      class="z-10 object-contain"
    />
    <div class="panel md:hidden"></div>

    <script type="module">
      window.addEventListener("DOMContentLoaded", () => {
        const container = document.getElementById("letters-scroll");
        const panels = container.querySelectorAll(".panel");
        const containerTop = container.offsetTop;
        const vh = window.innerHeight;

        function onScroll() {
          const scrollY = window.scrollY;
          const localScroll = scrollY - containerTop;

          panels.forEach((panel, i) => {
            const start = i * vh;
            const end = start + vh;

            if (localScroll >= start && localScroll < end) {
              panel.classList.add("visible");
            } else {
              panel.classList.remove("visible");
            }
          });
        }

        window.addEventListener("scroll", onScroll);
        onScroll();
      });
    </script>

    <style>
      .letters-scroll {
        height: 800vh;
      }
      @media (min-width: 48rem) {
        .letters-scroll {
          height: 750vh;
        }
      }

      .panel {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-style: italic;
        text-transform: uppercase;
        color: white;
        background: var(--bg);
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.4s ease;
        text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.6);
      }

      .panel.visible {
        opacity: 1;
        pointer-events: auto;
      }

      .floating-heart {
        position: absolute;
        bottom: -2rem;
        font-size: 1.5rem;
        opacity: 0.7;
        animation: floatUp ease-in infinite;
      }

      @keyframes floatUp {
        0% {
          transform: translateY(0) scale(1);
          opacity: 0.7;
        }
        50% {
          opacity: 1;
          transform: translateY(-50vh) scale(1.2) rotate(10deg);
        }
        100% {
          transform: translateY(-100vh) scale(0.8) rotate(-10deg);
          opacity: 0;
        }
      }
    </style>
  </div>
</section>
