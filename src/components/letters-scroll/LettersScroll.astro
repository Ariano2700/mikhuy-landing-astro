<section id="letters-scroll" class="letters-scroll">
  <div class="panel" style="--bg: #fbcfe8">Mikhuy</div>
  <div class="panel" style="--bg: #ddd6fe">Siempre</div>
  <div class="panel" style="--bg: #bfdbfe">Es</div>
  <div class="panel" style="--bg: #bbf7d0">Tu</div>
  <div class="panel" style="--bg: #fef08a">Mejor</div>
  <div class="panel" style="--bg: #fecaca">Aliado</div>
  <div class="panel"></div>

  <script type="module">
    window.addEventListener("DOMContentLoaded", () => {
      const container = document.getElementById("letters-scroll");
      const panels = container.querySelectorAll(".panel");
      const containerTop = container.offsetTop;
      const vh = window.innerHeight;

      function onScroll() {
        const scrollY = window.scrollY;
        const localScroll = scrollY - containerTop;

        panels.forEach((panel, i) => {
          const start = i * vh;
          const end = start + vh;

          if (localScroll >= start && localScroll < end) {
            panel.classList.add("visible");
          } else {
            panel.classList.remove("visible");
          }
        });
      }

      window.addEventListener("scroll", onScroll);
      onScroll();
    });
  </script>

  <style>
    .letters-scroll {
      height: 700vh;
    }
    .panel {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 6rem;
      font-weight: bold;
      font-style: italic;
      text-transform: uppercase;
      color: white;
      background: var(--bg);
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.4s ease;
    }

    .panel.visible {
      opacity: 1;
      pointer-events: auto;
    }
  </style>
</section>
